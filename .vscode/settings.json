{
    "editor.fontSize": 14,
    "editor.tabSize": 4,
    "files.autoSave": "onFocusChange",
    "terminal.integrated.fontFamily": "Courier New",

    // Python settings - UPDATED FOR WINDOWS PATHS
    "python.analysis.autoSearchPaths": true,
    "python.analysis.diagnosticSeverityOverrides": {
        "reportMissingImports": "none"
    },
    "python.analysis.extraPaths": [
        "${workspaceFolder}/src"
    ],
    "python.envFile": "${workspaceFolder}\\.env",
    "python.terminal.activateEnvironment": true,
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/Scripts/python.exe",

    // Test settings - UPDATED PATHS
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "python.testing.cwd": "${workspaceFolder}\\tests",
    "python.testing.pytestPath": "${workspaceFolder}/.venv/Scripts/pytest.exe",
    "python.testing.autoTestDiscoverOnSaveEnabled": true,
    
    "editor.rulers": [
        {"column": 72, "color": "#4c4c4c"},
        {"column": 79, "color": "#4b58b6"},
        {"column": 100, "color": "#677864"}
    ],
    "makefile.configureOnOpen": false
}
